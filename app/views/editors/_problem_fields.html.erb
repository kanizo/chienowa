<div class="nested-fields">
  <div class="field">
    <%= f.label '質問', :class => 'control-label, text-left' %>
    <br/>
    <%= f.text_area :question, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label '解答(例)', :class => 'control-label, text-left' %>
    <%= f.text_area :answer, :class => 'form-control' %>
  </div>
  <%= link_to_remove_association "問題を削除", f, :class => 'pull-right' %>
</div>